package com.gmail.marialyven12;

public class Main {

	public static void main(String[] args) {
	int n = 2;
	for (int i = 0; i <= 10; i++) {
	System.out.println(getNumber("PI", Math.PI,n));
	n+=1;
	}

	}
	public static String getNumber(String name, double value, int n) {
		String text = String.format(name + " = %."+n+ "f", value);
		return text;
	}
	
}

